<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginWithOtp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_back1"

        />

        <TextView
            android:id="@+id/login"
            android:layout_width="54dp"
            android:layout_height="30dp"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="32dp"
            android:gravity="top"
            android:text="@string/login"
            android:textAppearance="@style/login"
            android:textFontWeight="700" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:src="@drawable/otp_page_back_img"
        />


    <EditText
        android:id="@+id/phno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/enter_number_rect"
        android:hint="Enter Mobile  Number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/request_btn_otp"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/radius_otp_request_btn"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.788" />


    <EditText
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/enter_number_rect"
        android:hint="OTP"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/verify_otp"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/radius_otp_request_btn"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="Verify OTP"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.788" />

    <Button
        android:id="@+id/google_signIn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="44dp"

        android:layout_marginRight="25dp"
        android:width="369dp"
        android:height="50dp"
        android:background="@drawable/rectangle_2"

        android:drawableLeft="@drawable/ic_google"
        android:elevation="20dp"
        android:paddingLeft="80dp"
        android:paddingTop="12dp"

        android:paddingRight="80dp"
        android:paddingBottom="12dp"

        android:text="@string/sign_in_with_google"
        android:textAppearance="@style/sign_in_with_google"

        />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp" />


</LinearLayout>