<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginWithOtp">

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/login"
        android:layout_width="54dp"
        android:layout_height="30dp"

        android:layout_marginLeft="183dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:text="@string/login"
        android:textFontWeight="700"
        android:textAppearance="@style/login"
        android:gravity="top" />

    <ImageView
        android:layout_width="231dp"
        android:layout_height="200dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/otp_page_back_img"

        />


    <EditText
        android:id="@+id/phno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/enter_number_rect"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="59dp"
        android:hint="Enter Mobile  Number" />

    <Button
        android:id="@+id/request_btn_otp"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:text="Request OTP"
        android:textColor="#000"
        android:background="@drawable/radius_otp_request_btn"
        android:layout_marginLeft="20dp"
        app:layout_constraintVertical_bias="0.788"
        android:textSize="15sp"
        android:layout_marginTop="44dp"
        android:paddingRight="15dp"
        android:textAllCaps="false"
        android:paddingLeft="20dp" />


    <EditText
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/enter_number_rect"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        android:layout_marginTop="59dp"
        android:visibility="gone"
        android:hint="OTP" />

    <Button
        android:id="@+id/verify_otp"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:text="Verify OTP"
        android:textColor="#000"
        android:background="@drawable/radius_otp_request_btn"
        android:layout_marginLeft="20dp"
        app:layout_constraintVertical_bias="0.788"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_marginTop="44dp"
        android:paddingRight="15dp"
        android:textAllCaps="false"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/google_signIn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:width="369dp"
        android:height="50dp"

        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="20dp"

        android:layout_marginTop="44dp"
        android:background="@drawable/rectangle_2"
        android:drawableLeft="@drawable/google_icon_d"
        android:elevation="20dp"

        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"

        android:text="@string/sign_in_with_google"
        android:textAppearance="@style/sign_in_with_google"

        />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp" />


</LinearLayout>